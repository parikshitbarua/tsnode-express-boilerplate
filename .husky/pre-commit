# #!/usr/bin/env sh
# . "$(dirname -- "$0")/_/husky.sh"

red='\033[0;31m'
green='\033[0;32m'
yellow='\033[0;33m'
no_color='\033[0m'

echo -e "\n${yellow}Executing pre-commit hook...${no_color}\n"

# npx husky add .husky/pre-commit "npx lint-staged"

npx lint-staged

echo -e "${green}Git pre-commit hook was successful!${no_color}\n"
exit 0